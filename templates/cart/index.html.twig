{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <h1>Mon panier</h1>

        <div class="row">
            <div class="col-md-8">
                {% for product in cart %}
                <div class="row mt-2">
                    <div class="col-md-2">
                        <img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name }}">
                    </div>
                    <div class="col-md-6">
                        <strong>{{ product.object.name }}</strong>
                        <span class="d-block small">{{ product.object.pricewt|price }} â‚¬</span>
                    </div>
                    <div class="col-md-4 text-right">
                        
                       <a href="{{ path('app_cart_decrease', { id : product.object.id }) }}">-<a/><span class="badge text-bg-dark">x{{ product.qty }}</span> <a href="{{ path('app_cart_add', { id : product.object.id }) }}">+</a>
                    </div>

                    
                    </div>
                {% endfor %}
                <a href="{{ path('app_cart_remove') }}" class="small d-block btn btn-danger mt-3">Vider le panier</a>

                
                
            </div>

            <div class="col-md-4">
                  <div class="bg-light p-3">
                      <div class="d-flex justify-content-between">
                          <span class="fw-bold">Total produits</span>
                          <span>{{ fullCartQuantity }}</span>
                          </div>
                           <div class="d-flex justify-content-between mt-3">
                          <span class="fw-bold">Prix total T.T.C</span>
                          <span>{{ totalWt| price }}</span>
                          </div>
                          <div>
                                <a href="" class="btn btn-success w-100 mt-3">Commander</a>
                                </div>
                </div>
        </div>
    </div> 
{% endblock %}
